#include <stdio.h>

int main() {
    int opcao;
    int a, b;

    do {
        printf("\nMenu:\n");
        printf("1 - Somar\n");
        printf("2 - Subtrair\n");
        printf("3 - Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);

        if (opcao == 1 || opcao == 2) {
            printf("Digite dois numeros: ");
            scanf("%d %d", &a, &b);

            if (opcao == 1) {
                printf("Resultado da soma: %d\n", a + b);
            } else {
                printf("Resultado da subtracao: %d\n", a - b);
            }
        } else if (opcao != 3) {
            printf("Opcao invalida!\n");
        }
    } while (opcao != 3);

    printf("Programa encerrado.\n");

    return 0;
}
